    <LinearLayout android:orientation="vertical" android:id="@+id/channel_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/channel_view_margin_top" android:layout_toRightOf="@+id/preview_container"/>
