<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@android:color/black" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
            <ImageView android:id="@+id/imageView3" android:layout_width="match_parent" android:layout_height="150dp" android:layout_marginTop="20dp" app:srcCompat="@drawable/aircrack"/>
            <TextView android:textSize="20sp" android:typeface="normal" android:textStyle="bold" android:textColor="@android:color/white" android:gravity="center" android:id="@+id/textView2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="50dp" android:text="AIRCRACK-NG" android:layout_below="@+id/imageView3"/>
            <TextView android:textSize="16sp" android:typeface="serif" android:textStyle="bold" android:textColor="@android:color/white" android:id="@+id/textView4" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="26dp" android:text="Start monitor mode" android:layout_below="@+id/textView2" android:layout_centerHorizontal="true"/>
            <TextView android:textSize="15sp" android:typeface="serif" android:textColor="@color/colorAccent" android:id="@+id/textView5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="Interface:" android:layout_below="@+id/textView4"/>
            <EditText android:textColor="@color/colorPrimary" android:textColorHint="@color/bluedack" android:id="@+id/edititerfaceaircrack" android:layout_width="150dp" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:hint="wlan1" android:ems="10" android:layout_below="@+id/textView5" android:inputType="textPersonName"/>
            <Switch android:textColor="@color/colorAccent" android:id="@+id/switchaircrack" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="10dp" android:text="Enable" android:layout_below="@+id/textView5" android:layout_alignBaseline="@+id/edititerfaceaircrack" android:layout_alignRight="@+id/edititerfaceaircrack" android:layout_alignParentRight="true"/>
            <Button android:textColor="@android:color/white" android:id="@+id/btnstartairodump" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="38dp" android:text="RUN AIRODUMP-NG" android:layout_below="@+id/edititerfaceaircrack" android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
