<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar android:theme="?attr/nnf_toolbarTheme" android:id="@+id/nnf_picker_toolbar" android:background="?attr/colorPrimary" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="?attr/actionBarSize" android:layout_alignParentTop="true">
        <TextView android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" android:ellipsize="start" android:id="@+id/nnf_current_dir" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true"/>
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.RecyclerView android:id="@android:id/list" android:focusable="true" android:descendantFocusability="afterDescendants" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/nnf_buttons_container" android:layout_below="@+id/nnf_picker_toolbar"/>
    <FrameLayout android:id="@+id/nnf_buttons_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <LinearLayout android:orientation="horizontal" android:id="@+id/nnf_button_container" android:layout_width="match_parent" android:layout_height="wrap_content">
            <Button android:id="@+id/nnf_button_cancel" android:layout_width="0dp" android:layout_height="48dp" android:text="@android:string/cancel" android:layout_weight="1" style="?attr/borderlessButtonStyle"/>
            <Button android:id="@+id/nnf_button_ok" android:layout_width="0dp" android:layout_height="48dp" android:text="@android:string/ok" android:layout_weight="1" style="?attr/borderlessButtonStyle"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:id="@+id/nnf_newfile_button_container" android:layout_width="match_parent" android:layout_height="wrap_content">
            <EditText android:id="@+id/nnf_text_filename" android:paddingLeft="8dp" android:paddingRight="8dp" android:layout_width="0dp" android:layout_height="48dp" android:hint="@string/nnf_filename" android:maxLines="1" android:layout_weight="1"/>
            <ImageButton android:id="@+id/nnf_button_ok_newfile" android:layout_width="48dp" android:layout_height="48dp" android:tint="?attr/nnf_save_icon_color" android:hint="@android:string/ok" app:srcCompat="@drawable/nnf_ic_save_black_24dp" style="?attr/borderlessButtonStyle"/>
        </LinearLayout>
    </FrameLayout>
    <FrameLayout android:id="@+id/divider" android:background="?attr/nnf_separator_color" android:layout_width="match_parent" android:layout_height="1dp" android:layout_above="@+id/nnf_buttons_container"/>
</RelativeLayout>
