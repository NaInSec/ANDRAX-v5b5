    <LinearLayout android:orientation="vertical" android:id="@+id/channel_container" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="8dp" android:layout_below="@+id/preview_container"/>
    <include android:id="@+id/button_bar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="8dp" android:layout_marginBottom="8dp" android:layout_below="@+id/channel_container" android:layout_alignParentRight="true" layout="@layout/button_bar"/>
</merge>
